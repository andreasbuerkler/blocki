<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Blocki.MainWindow"
        Title="Blocki - probably another bad block diagram editor" Height="768" Width="1024">

    <DockPanel>
        <UserControl DockPanel.Dock="Left" Width="140" Background="Red" x:Name="controlPanel" />
        <UserControl DockPanel.Dock="Bottom" Height="20" Background="Blue" x:Name="statusPanel" />
        <UserControl DockPanel.Dock="Right" Background="Green" x:Name="drawPanel" />
    </DockPanel>

</Window>
